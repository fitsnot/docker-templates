<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
  <Name>Brother_QL_web</Name>
  <Repository>pklaus/brother_ql_web:latest</Repository>
  <Registry>https://hub.docker.com/r/pklaus/brother_ql_web</Registry>
  <Network>bridge</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Overview>This repository contain the application brother_ql_web, a web interface to print labels with Brother's QL-series label printers. The software is based on the Python package brother_ql.</Overview>
  <Category/>
  <WebUI>http://[IP]:[PORT:8013]/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/fitsnot/docker-templates/main/fitsnot/fitsnot-brother_ql_web.xml</TemplateURL>
  <Icon/>
  <ExtraParams>--restart=always --model QL-800 $(readlink -f /dev/ql800)</ExtraParams>
  <PostArgs/>
  <Description>This repository contain the application brother_ql_web, a web interface to print labels with Brother's QL-series label printers. The software is based on the Python package brother_ql.</Description>
    <Environment>
    <Variable>
      <Value/>
      <Name>model</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <PostArgs>--model QL-800 file:///dev/usb/lp0</PostArgs>
  <Config Name="Host Port 1" Target="8013" Default="8013" Mode="tcp" Description="WebUI Port" Type="Port" Display="always" Required="false" Mask="false">8013</Config>
  <Config Name="Host Path 1" Target="/dev/usb/" Default="" Mode="rw" Description="/dev/usb/" Type="Path" Display="always" Required="false" Mask="false">/dev/usb/</Config>
  <Config Name="model" Target="model" Default="QL-800" Mode="" Description="Model of printer" Type="Variable" Display="always" Required="true" Mask="false">QL-800</Config>
</Container>
